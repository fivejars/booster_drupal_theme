{# themes/contrib/booster_theme/components/button/button.stories.twig #}
{% stories button with {
  title: "Booster/Components/Button",
  argTypes: {
    "button_html_tag": {
      "name": "HTML Tag",
      "description": "The HTML tag to use for the button (button | a). Defaults to `button`.",
      "control": "select",
      "defaultValue": "button",
      "options": {
        "'Button element'": "button",
        "'Anchor button'": "a"
      }
    },
    "color": {
      "name": "Color",
      "description": "Bootstrap includes several predefined button styles, each serving its own semantic purpose, with a few extras thrown in for more control.",
      "defaultValue": "",
      "control": "select",
      "options": {
        "Primary": "primary",
        "Secondary": "secondary",
        "Success": "success",
        "Info": "info",
        "Warning": "warning",
        "Danger": "danger",
        "Light": "light",
        "Dark": "dark"
      }
    },
    "outline": {
      "name": "Outline",
      "description": "In need of a button, but not the hefty background colors they bring? Replace the default modifier classes with the .btn-outline-* ones to remove all background images and colors on any button.",
      "defaultValue": false,
      "control": "boolean"
    },
    "size": {
      "name": "Size",
      "description": "Bootstrap button size",
      "defaultValue": "",
      "control": "select",
      "options": {
        "'- none -'": "",
        "Small": "btn-sm",
        "Large": "btn-lg"
      }
    },
    "disabled": {
      "name": "Disabled",
      "description": "Disabled button",
      "defaultValue": false,
      "control": "boolean"
    },
    "content": {
      "name": "Content",
      "description": "The content for the button",
      "control": "text",
      "defaultValue": "Button"
    },
    "url": {
      "name": "URL Link",
      "description": "URL link for the button when the HTML tag is an anchor link.",
      "defaultValue": "",
      "control": "text"
    }
  },
} %}

  {% story Default with {
    "name": "Default",
    "args": {
      "button_html_tag": "button",
      "color": "primary",
      "outline": false,
      "size": "",
      "disabled": false,
      "content": "Button",
      "url": "#"
    }
  } %}
    <div class="component-wrapper" style="display: flex; align-items: center; justify-content: center; min-height: 500px; gap: 10px; background: #ccc;">
      {% include 'radix:button' with {
        button_html_tag: button_html_tag,
        color: color,
        outline: outline,
        size: size,
        disabled: disabled,
        content: content,
        url: url
      } %}
    </div>
  {% endstory %}

  {% story Collection with {
    "name": "Collection",
    "args": {
      "button_html_tag": "button",
      "outline": false,
      "size": "",
      "disabled": false,
      "content": "Button",
      "url": "#"
    }
  } %}

    {% set colors = [
      "primary",
      "secondary",
      "success",
      "info",
      "warning",
      "danger",
      "light",
      "dark"
    ] %}

    <div class="component-wrapper" style="display: flex; align-items: center; justify-content: center; min-height: 500px; gap: 10px; background: #ccc;">
      {% for color in colors %}
        {% include 'radix:button' with {
          button_html_tag: button_html_tag,
          color: color,
          outline: outline,
          size: size,
          disabled: disabled,
          content: content,
          url: url
        } %}
      {% endfor %}
    </div>
  {% endstory %}


{% endstories %}
